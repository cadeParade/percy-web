<HeadLayout />
{{title "Percy | Visual testing as a service"}}

<DarkMode />
{{outlet}}

{{#if this.confirm.showPrompt}}
  <ConfirmDialog />
{{/if}}

{{#if this.flashMessages.queue}}
  <div class="flash-message-container z-top">
    {{#each this.flashMessages.queue as |flash|}}
      <FlashMessage @flash={{flash}} @classNames={{concat "flash-message-" flash.type (if flash.sticky " flash-message-sticky")}} as |component flash|>
        <div class="flash-message-detail flash-message-detail-{{flash.type}} flex justify-center items-center">
          <figure class="svg-container">
            {{inline-svg (concat "flash-" flash.type "-icon")}}
          </figure>
        </div>
        <div class="px-2 py-1">
          <div class="text-gray-700 text-base font-semibold">{{flash.title}}</div>
          <p class="text-base text-secondary mb-0">{{flash.message}}</p>
        </div>
        <div class="flash-message-close flex justify-center items-center cursor-pointer">
          <figure class="svg-container">
            {{inline-svg "close-icon"}}
          </figure>
        </div>
      </FlashMessage>
    {{/each}}
  </div>
{{/if}}
