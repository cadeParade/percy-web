<FixedTopHeader />

<div class="container-vh">
  <div class="w-90vw max-w-md mx-auto py-4">
    <div class="sm:flex">
      <div class="sm:flex-1 sm:mr-4">
        <aside class="sidenav">
          <header class="sidenav-header">Account settings</header>
          <ul class="sidenav-list">
            <li class="sidenav-list-item">
              <LinkTo @route="settings.profile" @classNames="sidenav-list-item-link">Profile</LinkTo>
            </li>
            <li class="sidenav-list-item">
              <LinkTo @route="settings.connected-accounts" @classNames="sidenav-list-item-link">Connected accounts</LinkTo>
            </li>
            <li class="sidenav-list-item">
              <LinkTo @route="settings.display-preferences" @classNames="sidenav-list-item-link">Display preferences</LinkTo>
            </li>
            <li class="sidenav-list-item">
              <LinkTo @route="settings.notifications" @classNames="sidenav-list-item-link">Notifications</LinkTo>
            </li>
          </ul>
        </aside>
      </div>
      <div class="flex-3">{{outlet}}</div>
    </div>
  </div>
</div>

<MainFooter />
