{{title model.build.buildTitle}}
<div class="p2">
  <BuildToolbar
    @build={{model.build}}
    @project={{model.build.project}}
    @organization={{model.build.project.organization}}
    @allDiffsShown={{true}}
    @toggleAllDiffs={{route-action "noop"}}
    @createReview={{route-action "noop"}}
    @approvableSnapshots={{model.snapshots}}
    @updateActiveBrowser={{route-action "noop"}}
    @isSnapshotsLoading={{false}}
    @isBuildApprovable={{false}}
  />
  <BuildHeader
    @build={{model.build}}
    @isBuildApprovable={{false}}
  />
  <div class="p-2 w-full">
    <div>build {{model.build.buildNumber}}</div>
  </div>
  <div class="flex">
    <div class="w-1/5 h-screen overflow-y-scroll">
      <SnapshotNameList @snapshots={{model.snapshots}} />
    </div>
    <div class="w-4/5 h-screen overflow-y-scroll">
      {{outlet}}
    </div>
  </div>
</div>
