<ModalDialog @wrapperClass="SnapshotViewerFullModalWrapper" >
  <SnapshotViewerFull
    @snapshot={{this.snapshot}}
    @isBuildApprovable={{this.isBuildApprovable}}
    @snapshotSelectedWidth={{this.snapshotSelectedWidth}}
    @comparisonMode={{this.comparisonMode}}
    @activeBrowser={{this.activeBrowser}}
    @transitionRouteToWidth={{action "updateActiveWidth"}}
    @updateComparisonMode={{action "updateComparisonMode"}}
    @updateActiveBrowser={{action "updateActiveBrowser"}}
  />
</ModalDialog>
