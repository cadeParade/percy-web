<ModalDialog @wrapperClass="SnapshotViewerFullModalWrapper" >
  <SnapshotViewerFull
    @snapshot={{model.snapshot}}
    @snapshotSelectedWidth={{snapshotSelectedWidth}}
    @comparisonMode={{comparisonMode}}
    @updateComparisonMode={{route-action "updateComparisonMode"}}
    @transitionRouteToWidth={{route-action "transitionRouteToWidth"}}
    @createReview={{route-action "createReview"}}
    @activeBrowser={{activeBrowser}}
    @updateActiveBrowser={{route-action "updateActiveBrowser"}}
    @isBuildApprovable={{isBuildApprovable}}
    @createCommentThread={{route-action "createCommentThread"}}
    @closeCommentThread={{route-action "closeCommentThread"}}
    @createComment={{route-action "createComment"}}
  />
</ModalDialog>
