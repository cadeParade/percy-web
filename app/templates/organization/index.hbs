{{fixed-top-header currentOrganization=organization}}

{{#dashboard-nav-wrapper organization=organization showMemberLinks=isUserMember}}
  {{#each enabledProjects as |project|}}
    {{organizations/project-card project=project organization=organization}}
  {{/each}}

  {{#if (and isUserMember (gt archivedProjects.length 0))}}
    {{#if isShowingArchivedProjects}}
      {{#each archivedProjects as |project|}}
        {{organizations/project-card project=project organization=organization}}
      {{/each}}
    {{else}}
      <div class="text-blue-500 my-2 cursor-pointer hover:text-blue-700" {{action (toggle "isShowingArchivedProjects" this)}} data-test-show-archived-projects>Show archived projects</div>
    {{/if}}
  {{/if}}
{{/dashboard-nav-wrapper}}
