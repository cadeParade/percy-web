{{title "Error"}}
<FixedTopHeader />
<div class="w-full container-vh bg-white-pattern flex items-center justify-center">
  {{#if (is-substring-present this.model '403')}}

    <StatusPanel
      @inlineSvgName="error-large-icon"
      @mainText="Access Denied"
    >
      <p class="alt-p text-secondary">
        <strong>Open Source Projects: </strong>
        If this is an open source project, you can ask an administrator to make the project public.
      </p>
      <p class="alt-p text-secondary">
        <strong>Private Projects: </strong>
        If you should have access, please ask an administrator to send you an invite to join this organization.
      </p>
      <p class="alt-p text-secondary">
        Please feel welcome to <a href="#" {{action "showSupport"}}>contact us</a> if you believe you have reached this in error.
      </p>
    </StatusPanel>
  {{else if (is-substring-present this.model '404')}}

    <StatusPanel
      @inlineSvgName="error-large-icon"
      @mainText="Not Found"
      @secondaryText="This resource was not found in Percy."
    >
      <p class="alt-p text-secondary">
        Feel free to <a href="#" {{action "showSupport"}}>contact us</a> if you believe you have reached this in error.
      </p>
      <ErrorToggle
        @error={{this.model}} />
    </StatusPanel>
  {{else}}

    <StatusPanel
      @inlineSvgName="error-large-icon"
      @mainText="Uh Oh ..."
      @secondaryText="Something went wrong, sorry! This error has been reported and we will look into it."
    >
      <p class="alt-p text-secondary">
        Feel free to <a href="#" {{action "showSupport"}}>contact us</a> if you believe you have reached this in error.
      </p>
      <ErrorToggle
        @error={{this.model}} />
    </StatusPanel>
  {{/if}}
</div>
