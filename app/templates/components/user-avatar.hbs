<div data-test-user-avatar style="width: 40px; height: 40px;" class="rounded-full overflow-hidden {{class}}">
  {{#if (or showPlaceholder (not user))}}
    <img src="/images/placeholder-avatar.jpg" alt="placeholder avatar">
  {{else}}
    <img src="{{@user.avatarUrl}}" alt="user avatar">
  {{/if}}
</div>
