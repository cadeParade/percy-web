<li
  class="flex items-center mb-2 {{if project.isDisabled 'opacity-25'}}"
  {{action toggleSidebar}}
>
  {{#if displayDynamicStatusDot}}
    <div class="status-indicator flex-no-shrink mr-2 is-{{dasherize recentBuild.state}} is-{{if recentBuild.isFinished (dasherize recentBuild.reviewState)}}"></div>
  {{else}}
   <div class="status-indicator flex-no-shrink mr-2"></div>
  {{/if}}

  {{#link-to
    "organization.project.index"
    project.organization.slug
    project.slug
    class="font-semibold link-gray truncate"
  }}
    {{project.name}}
  {{/link-to}}
</li>
