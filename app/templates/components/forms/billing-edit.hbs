<form action="javascript:;" class="m-0 Form" data-test-billing-edit-form>
  {{form-fields/input
    property="billingEmail"
    title="Billing email (for payment receipts)"
    changeset=changeset
    validateProperty=(action "validateProperty" changeset "billingEmail")
    testLabel="billing-email"
  }}
  <div class="flex justify-start">
    {{form-fields/submit
      value="Save"
      classes="btn btn-primary shadow-purple-lg mb-0 mr-2"
      disabled=isSubmitDisabled
      isSaving=isSaving
      isSaveSuccessful=isSaveSuccessful
      submit=(action "save")
    }}
    {{#percy-btn handleClick=hideForm}}Cancel{{/percy-btn}}
  </div>
</form>
