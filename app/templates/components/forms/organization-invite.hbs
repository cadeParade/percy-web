<form action="javascript:;" class="mb-0">
  <div class="p-2 bg-gray-000 rounded border mb-2">
    <FormFields::Textarea
      @property="emails"
      @title="Email addresses"
      @id="inviteFormEmailAddresses"
      @changeset={{this.changeset}}
      @autofocus={{true}}
      @class="mb-2"
      @placeholder="Separate each email with a space or a new line. Invitations expire after one week."
      @validateProperty={{action "validateProperty" this.changeset "emails"}}
      @keyUp={{action "resetSaveButton"}}
     />
    <FormFields::Checkbox
      @property="role"
      @checkedValue="admin"
      @title="Administrator"
      @id="inviteFormRole"
      @changeset={{this.changeset}}
      @validateProperty={{action "validateProperty" this.changeset "role"}}
    />
    <p class="m-0 -mt-1">Allow these people to edit organization details, billing information, and invite new members. All normal members can create and manage projects.</p>
    {{#if this.errorMessage}}
      <div class="Form-errors">
        {{this.errorMessage}}
      </div>
    {{/if}}
  </div>

  <div class="flex justify-end">
    <LinkTo
      @route="organizations.organization.users"
      @model={{this.organization.slug}}
      @data-test-cancel-button={{true}}
      class="percy-btn"
    >
      Cancel
    </LinkTo>
    <FormFields::Submit
      @value="Send Invites"
      @classes="btn btn-primary shadow-purple-lg mb-0 ml-1"
      @isSaving={{this.isSaving}}
      @isSaveSuccessful={{this.isSaveSuccessful}}
      @submit={{action "save"}}
    />
  </div>
</form>
