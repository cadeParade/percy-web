<form action="javascript:;" class="Form mb-0" data-test-edit-org-form>
  <div class="p-2 bg-gray-000 rounded border mb-2">
    <FormFields::Input
      @property="name"
      @title="Organization name"
      @changeset={{this.changeset}}
      @validateProperty={{action "validateProperty" this.changeset "name"}}
      @testLabel="org-name"
    />

    <FormFields::Input
      @property="slug"
      @title="Slug"
      @changeset={{this.changeset}}
      @validateProperty={{action "validateProperty" this.changeset "slug"}}
      @testLabel="org-slug"
    />

    <div class="rounded bg-yellow-000 border border-yellow-100 p-2">
      <strong>Note:</strong> The slug is used to identify this organization in URLs. Old build URLs will break if the slug is changed, and a new organization can claim the old slug.
    </div>
  </div>

  <div class="flex justify-end">
    <input type="submit" class="btn btn-primary shadow-purple-lg mb-0" value="Save Settings" disabled={{this.disabled}} onclick={{action "save"}} data-test-org-save-button>
  </div>
</form>
