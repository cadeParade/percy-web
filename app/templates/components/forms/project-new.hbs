{{title "Create a new project"}}

<form action="javascript:;">
  <div class="p-2 bg-gray-000 rounded border mb-2">
    <FormFields::Input @property="name" @title="Project name" @changeset={{this.changeset}} @validateProperty={{action "validateProperty" this.changeset "name"}} @autofocus={{true}} @placeholder="widgets-web-app" @testLabel="project-name-input" />
    {{#if organization.isVersionControlIntegrated}}
      <strong>Link a repository</strong>
      <Projects::RepoIntegrator @project={{model}} />
    {{/if}}
  </div>
  <div class="flex justify-end">
    <FormFields::Submit @value="Create Project" @classes="btn btn-primary shadow-purple-lg mb-0" @submit={{action "save"}} />
  </div>
</form>
