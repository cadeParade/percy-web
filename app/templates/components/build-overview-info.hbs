<div class="{{unless this.isBuildApprovable "mr-2"}}">
  <div class="flex items-center text-xl md:text-2xl leading-none">
    <div class="text-secondary">
      Build <span class="font-mono font-normal tracking-sm text-primary mr-1">{{this.build.buildNumber}}</span>
    </div>
    <BuildInfoDropdown @build={{this.build}} />
    <DemoTooltip
      @build={{this.build}}
      @key="build-overview"
    />
  </div>
</div>
