{{yield (hash
  group=(component 'percy-form/group')
  label=(component 'percy-form/label')
  input=(component 'percy-form/input' class="form-control")
  checkbox=(component 'percy-form/checkbox')
  toggle=(component 'percy-form/toggle')
  validations=(component 'percy-form/validations')
  submit=(component
    'percy-btn'
    type="submit"
    isPrimaryButton=true
    isSaving=submitTask.isRunning
    isDisabled=submitTask.isRunning
  )
)}}
