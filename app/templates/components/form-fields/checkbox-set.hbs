<fieldset>
  <legend>
    <span class="label-body font-semibold">
      {{title}}
      {{#if hint}}<span class="text-gray-300">({{hint}})</span>{{/if}}
    </span>
    {{#if subtitle}}
      <div class="mb-1 text-gray-400">{{subtitle}}</div>
    {{/if}}
  </legend>

  {{#each allOptions as |option|}}
    <label class="flex mb-sm items-start" data-test-checkbox-set-input>
      <input
        name="{{option.value}}"
        type="checkbox"
        checked={{contains option.value propertyValue}}
        class="mt-sm {{if fieldErrors 'error'}}"
        onchange={{action "updateValue"}}
        onblur={{action validateProperty}}
      >
      <div>
        <div class="font-medium {{labelClasses}}">{{option.label}}</div>
        <div class="text-gray-400">{{option.description}}</div>
      </div>
    </label>
  {{/each}}

  {{#if fieldErrors}}
    <ul class="Form-errors">
      {{#each (get fieldErrors "validation") as |message|}}
        <li>{{message}}</li>
      {{/each}}
    </ul>
  {{/if}}
</fieldset>
