<label>
  <span class="label-body">{{title}}</span>
  <textarea
    class="form-control {{if fieldErrors 'error'}}"
    value={{get changeset property}}
    oninput={{action (mut (get changeset property)) value="target.value"}}
    onblur={{action validateProperty}}
    autofocus={{autofocus}}
    placeholder={{placeholder}}
    data-test-textarea-input={{testLabel}}
  ></textarea>
</label>
{{#if fieldErrors}}
  <ul class="Form-errors">
    {{#each (get fieldErrors "validation") as |message|}}
      <li>{{message}}</li>
    {{/each}}
  </ul>
{{/if}}
