{{#if this.toggle}}
  <label style="-webkit-tap-highlight-color: transparent;" class="checkbox-toggle-slider mb-1 flex cursor-pointer select-none {{if this.isDisabled "opacity-50"}}" data-test-toggle-checkbox-label>
    <input
      type="checkbox"
      onchange={{action "updateValue"}}
      onblur={{action this.validateProperty}}
      checked={{this.shouldBeChecked}}
      disabled={{this.isDisabled}}
      data-test-checkbox-input={{this.testLabel}}
    >
    <span class="font-semibold mr-1">{{this.title}}</span>
    <div style="width: 36px; height: 20px;" class="toggle-slider relative bg-gray-100 border border-gray-200 rounded-full" data-test-toggle-checkbox-slider>
      <div style="top: 1px; left: 1px;" class="toggle-dot w-3 h-3 absolute bg-white rounded-full shadow-dark-lg" data-test-toggle-checkbox-dot></div>
    </div>
  </label>
{{else}}
  <label>
    <span class="label-body">{{this.title}}</span>
    <input
      type="checkbox"
      class="mr-1 {{if this.fieldErrors 'error'}}"
      onchange={{action "updateValue"}}
      onblur={{action this.validateProperty}}
      checked={{this.shouldBeChecked}}
      disabled={{this.isDisabled}}
      data-test-checkbox-input={{this.testLabel}}
    >
  </label>
  {{#if this.fieldErrors}}
    <ul class="Form-errors">
      {{#each (get this.fieldErrors "validation") as |message|}}
        <li>{{message}}</li>
      {{/each}}
    </ul>
  {{/if}}
{{/if}}
