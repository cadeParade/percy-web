{{#if (or this.snapshot.isUnreviewed this.snapshot.isRejected)}}
  <DemoTooltip
    @build={{this.snapshot.build}}
    @isFirstInstance={{eq this.index 0}}
    @anchorPlacement='left-corner'
    @key="snapshot-approval-button"
  />
{{else if (eq this.snapshot.build.project.defaultBaseBranch this.snapshot.build.branch)}}
  <DemoTooltip
    @build={{this.snapshot.build}}
    @isFirstInstance={{eq this.index 0}}
    @key="auto-approved-pill"
  />
{{/if}}
