<div class="bg-white rounded shadow-1 border-t p-2" data-test-slack-config-item>
  <div class="flex justify-between">
    <div class="flex justify-start items-center">
      <div>
        <div class="flex justify-start items-center">
          <div class="text-lg font-semibold mr-2 whitespace-no-wrap" data-test-project-name>
            {{this.projectName}}
          </div>
          <div class="flex-shrink">
            <div>
              {{#each this.notificationLabels as |type|}}
                <code
                  style="display: inline-block; padding: 2px 8px;"
                  class="
                    status-pill
                    font-sans
                    mr-1
                    my-sm
                    {{if (or (eq type 'Approved') (eq type 'Auto-approved')) 'is-approved'}}
                    {{if (eq type 'Unreviewed & Changes requested') 'is-unreviewed'}}
                    {{if (eq type 'No changes') 'is-unchanged'}}"
                  data-test-notification-type>
                  {{type}}
                </code>
              {{/each}}
            </div>
            {{#if this.branch}}
              <div class="mt-1">
                <span class="whitespace-no-wrap font-semibold">Branch:</span>
                <code>{{this.branch}}</code>
              </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
    <LinkTo
      @route="organizations.organization.integrations.slack.slack-config"
      @models={{array this.slackIntegrationConfig.slackIntegration.id this.slackIntegrationConfig.id}}
    >
      <button type="button" class="percy-btn ml-2" data-test-edit-button>
        Edit Configuration
      </button>
    </LinkTo>
  </div>
</div>
