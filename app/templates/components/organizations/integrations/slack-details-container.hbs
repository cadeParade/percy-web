      <Organizations::Integrations::SlackSettings @projectOptions={{projectOptions}} @organization={{organization}} @connectSlackChannel={{connectSlackChannel}} @deleteSlackIntegration={{deleteSlackIntegration}} />
    {{/if}}
  {{/if}}
</div>
