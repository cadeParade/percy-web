      <Forms::SlackIntegrationConfig @projectOptions={{projectOptions}} @slackIntegrationConfig={{slackIntegrationConfig}} @deleteSlackIntegrationConfig={{deleteSlackIntegrationConfig}} @saveSuccess={{action "slackConfigSaveSuccess"}} />
