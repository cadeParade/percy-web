<div data-test-slack-settings>
  {{#if this.organization.isSlackIntegrated}}
    {{#each this.organization.slackIntegrations as |slackIntegration|}}
      <Organizations::Integrations::SlackIntegrationItem
        @projectOptions={{this.projectOptions}}
        @slackIntegration={{slackIntegration}}
        @deleteSlackIntegration={{this.deleteSlackIntegration}}
      />
    {{/each}}
  {{/if}}

  <section class="px-2" data-test-add-channel>
    <div class="bg-white rounded shadow-1 border-t p-2">
      <div class="flex items-center">
        {{inline-svg "slack-icon" class="mr-2"}}
        <PercyBtn
          @handleClick={{action "connectSlackChannel"}}
          @isPrimaryButton={{true}}
        >
          Add Slack channel
        </PercyBtn>
      </div>
    </div>
  </section>
</div>
