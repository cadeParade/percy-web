  <section class="container-xl pt-4">

    <div class="mb-2 pt-4">
      <h2 class="mb-0">Builds</h2>
      <div class="mb-2 text-gray-400">Over last 30 days</div>
      <div class="bg-white rounded shadow-1 p-2 mb-2 flex w-full justify-between">

        <div class="text-xl font-semibold mb-1 p-4 pl-8" style="width: 50%;">
          <div class="mb-2">
            Approved
          </div>
          <div class="text-5xl flex items-center" id="buildsApproved">
          </div>
          <div class="mb-2">
            Last 30 days
          </div>
          <div class="text-5xl flex items-center" id="buildsInLastMonth">
          </div>
          <div class="mb-2">All time</div>
          <div class="text-5xl flex items-center" id="buildsAllTime">
          </div>
        </div>

        <div class="text-xl font-semibold mb-1 p-4" style="width: 50%;">
          <div class="mb-2">By who?</div>
          {{!-- <table> --}}
            <div class="flex flex-col flex-wrap" style="height: 280px;">
            {{#each buildsApprovedByPerson as |data|}}
              <div class="flex mb-2 items-center">
                {{user-avatar user=data.user class="mr-3"}}
                <div class="rounded mr-2 bg-purple-600" style="height: 25px; width: {{mul-tiply data.count 2}}px"></div>
                {{data.count}}
              </div>
{{!--               <tr>
