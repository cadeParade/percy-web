{{#if this.isGroupApproved}}
  <div class="status-pill is-approved" data-test-group-approved>
    {{this.numTotalSnapshots}} changes approved
  </div>
{{else}}
  <div class="{{if this.isDisabled "hint--left hint--rounded hint--bounce"}}"
    aria-label="{{if this.isDisabled "You can't approve this group because you are not a member of this build's organization or are not logged in"}}">
    <button
      {{action "approveGroup"}}
      type="button"
      class="btn btn-success
        {{if this.isLoading 'is-loading'}}"
      disabled="{{if this.isDisabled "disabled"}}"
      data-test-group-approval-button
    >
      Approve {{pluralize this.numUnapprovedSnapshots "change"}}
    </button>
  </div>
{{/if}}
