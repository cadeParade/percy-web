<div class="w-90vw max-w-sm mx-auto">
  <section class="mb-6">
    <h2 class="text-2xl md:text-3xl font-normal">Connected Accounts</h2>
    {{connected-accounts-panel
      identities=identities
      deleteIdentity=(action "deleteIdentity")
      addIdentity=(action "addIdentity")
    }}
  </section>
  {{#if showCreateAccount}}
    <section>
      <h2 class="text-2xl md:text-3xl font-normal mb-1">Create Account</h2>
      {{forms/account-new
        model=(hash)
        saveSuccess=(action "accountCreated")
      }}
    </section>
  {{/if}}
</div>
