<div class="w-90vw max-w-sm mx-auto">
  <section class="mb-6">
    <h2 class="text-2xl md:text-3xl font-normal mb-2">Connected accounts</h2>
    <ConnectedAccountsPanel
      @identities={{this.identities}}
      @allowEditingAccounts={{this.allowEditingAccounts}}
      @deleteIdentity={{action "deleteIdentity"}}
      @addIdentity={{action "addIdentity"}}
    />
  </section>
  {{#if (and this.showCreateAccount this.allowEditingAccounts)}}
    <section>
      <h2 class="text-2xl md:text-3xl font-normal mb-1">Create account</h2>
      <Forms::AccountNew
        @model={{hash}}
        @saveSuccess={{action "accountCreated"}}
      />
    </section>
  {{/if}}
</div>
