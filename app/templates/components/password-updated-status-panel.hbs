{{#if (eq success 'true')}}

  <StatusPanel @inlineSvgName="thumbs-up-large-icon" @mainText="Success!" @secondaryText="Your password has been updated">
    {{#if currentUser}}
      <LinkTo @route="settings.profile" @classNames="percy-btn percy-btn-primary test-password-updated-settings-link">Continue to Profile</LinkTo>
    {{else}}
      <LinkTo @route="login" @classNames="percy-btn percy-btn-primary test-password-updated-signin-link">Continue to Sign In</LinkTo>
    {{/if}}
  </StatusPanel>

{{else}}

  <StatusPanel
    @inlineSvgName="error-large-icon"
    @mainText="Something went wrong!"
    @secondaryText="There was a problem changing your password. Please try again or contact support."
  >
    {{#if currentUser}}
      <LinkTo @route="settings.profile" @classNames="percy-btn percy-btn-primary test-password-updated-settings-link">Continue to Profile</LinkTo>
    {{else}}
      <LinkTo @route="login" @classNames="percy-btn percy-btn-primary test-password-updated-signin-link">Continue to Sign In</LinkTo>
    {{/if}}
  </StatusPanel>

{{/if}}
