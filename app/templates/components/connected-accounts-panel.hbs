{{#if hasAnyIdentities}}
  <div class="border-b mb-3 pb-3">
    {{#if emailPasswordIdentity}}
      <div class="flex justify-between items-center mb-1">
        <div class="font-mono flex items-center">
          {{inline-svg "percy-logo-tiny-on-light" class="mr-1"}}
          {{emailPasswordIdentity.user.name}}
        </div>

        {{#if isDisconnectIdentityEnabled}}
          <button type="button" class="btn btn-sm btn-alt"
            {{action deleteIdentity emailPasswordIdentity.id target=route}}
            data-test-connected-accounts-panel-delete-ep-identity>
            Disconnect
          </button>
        {{/if}}
      </div>
    {{/if}}
    {{#if githubIdentity}}
      <div class="flex justify-between items-center mb-1">
        <div class="font-mono flex items-center">
          {{inline-svg "github-icon" class="mr-1"}}
          {{#if githubIdentity.nickname}}
            {{githubIdentity.nickname}}
          {{else}}
            {{githubIdentity.user.name}}
          {{/if}}
        </div>
        {{#if isDisconnectIdentityEnabled}}
          <button type="button" class="btn btn-sm btn-alt"
            {{action deleteIdentity githubIdentity.id}}
            data-test-connected-accounts-panel-delete-github-identity>
            Disconnect
          </button>
        {{/if}}
      </div>
    {{/if}}
  </div>
{{/if}}

<div class="flex items-center mb-2">
  {{#if (not emailPasswordIdentity)}}
    <button type="button" class="btn btn-primary shadow-purple-lg flex-1 mx-1"
      {{action addIdentity "auth0"}}
      data-test-connected-accounts-panel-add-ep-identity>
      Add email/password account
    </button>
  {{/if}}

  {{#if (not githubIdentity)}}
    <button type="button" class="btn btn-github flex-1 mx-1"
      {{action addIdentity "github"}}
      data-test-connected-accounts-panel-add-github-identity>
      Connect your GitHub account
    </button>
  {{/if}}
</div>

{{#if (not githubIdentity)}}
  <div class="rounded border py-1 px-2">
    Connecting your GitHub account allows you to sign in with GitHub and manage your GitHub integration with Percy.
  </div>
{{/if}}
