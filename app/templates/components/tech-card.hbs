<div
  class="tech-card {{this.classes}} {{if this.isSelected 'is-selected'}}"
  {{action (optional this.select)}}
  role="button"
  data-test-tech-card
>
  <div class="flex flex-col items-center text-center">
    <figure class="svg-container">
      {{inline-svg (dasherize this.label)}}
    </figure>
    {{capitalize this.label}}
  </div>
</div>
