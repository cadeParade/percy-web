<div class="public-project-notice md:justify-between md:flex-no-wrap" data-test-public-project-notice>
  <div class="flex items-center">
    {{fa-icon "globe" class="fa-2x text-blue-500 mr-2"}}
    {{displayText}}
  </div>
  {{#if currentUser}}
    {{#link-to "default-org" class="btn btn-primary mt-2 ml-5 md:ml-0 md:mt-0"}}{{btnText}}{{/link-to}}
  {{else}}
    <a href="#" {{action "showLoginModal"}} class="btn btn-primary mt-2 ml-5 md:ml-0 md:mt-0">{{btnText}}</a>
  {{/if}}
</div>
