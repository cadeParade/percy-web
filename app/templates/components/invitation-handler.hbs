<div class="text-center px-4 py-8">
  {{#if (and this.invitation.isExpired (not this.accept.isRunning))}}
    <h3 class="text-2xl font-semibold"><strong>Whoops!</strong> This invite has expired or already been used</h3>

    <p>
      Select an organization above, or ask an organization administrator to send you a new invite.
    </p>
  {{else}}
    <h3 class="text-2xl font-semibold mb-2">Join <strong>{{this.invitation.organization.name}}</strong> on Percy</h3>

    <div class="flex justify-center mb-2">
      <PercyBtn
        @handleClick={{perform this.accept}}
        @isPrimaryButton={{true}}
        @isSaving={{this.accept.isRunning}}
        @testLabel='invite-accept-button'
      >
        Accept invitation
      </PercyBtn>
    </div>
    <p>
      Joining as <strong>{{this.currentUser.name}}</strong>. You can <a href="#" {{action "logout"}}>logout</a> and login as a different user.
    </p>
  {{/if}}
</div>
