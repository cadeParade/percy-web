<div class='w-full container-vh bg-white-pattern flex items-center justify-center' data-test-sso-login>
  <StatusPanel
    @inlineSvgName={{this.svgName}}
    @mainText={{this.mainText}}
    @secondaryText={{this.secondaryText}}
  >
    <PercyBtn
      @isPrimaryButton={{true}}
      @handleClick={{action "showLoginPrompt"}}
    >
      Login now
    </PercyBtn>
    <p class='mt-2'>
      To bypass this page in the future, enter your {{or this.organizationName ''}} email address in the Percy login screen.
    </p>

    <div class='mt-2'>
      If you would like assistance, please
      <span data-test-sso-show-support {{action "showSupport"}} class='link-blue cursor-pointer' role="button">
        contact support
      </span>
      .
    </div>
  </StatusPanel>
</div>
