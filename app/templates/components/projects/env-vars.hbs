{{#if this.project.isDemo}}
  <CodeBlock @data-test-env-var-demo={{true}} @lang="nohighlight">PERCY_TOKEN=[This is a demo project. Create your own project to get a PERCY_TOKEN]</CodeBlock>
{{else}}
  {{#if this.project.tokens.isPending}}
    <CodeBlock><em>Loading...</em></CodeBlock>
  {{/if}}
  {{#with this.project.writeOnlyToken.token as |token|}}
    <CodeBlock @lang="nohighlight">PERCY_TOKEN={{token}}</CodeBlock>
  {{/with}}
{{/if}}
