{{#unless project.isDemo}}
  {{#if project.tokens.isPending}}
    <CodeBlock><em>Loading...</em></CodeBlock>
  {{/if}}
  {{#with project.writeOnlyToken.token as |token|}}
    <CodeBlock @lang="nohighlight">PERCY_TOKEN={{token}}</CodeBlock>
  {{/with}}
{{else}}
  {{#code-block data-test-env-var-demo lang="nohighlight"}}PERCY_TOKEN=[This is a demo project. Create your own project to get a PERCY_TOKEN]{{/code-block}}
{{/unless}}
