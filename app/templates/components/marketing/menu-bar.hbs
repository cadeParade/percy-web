<div class="marketing-menu-bar relative flex justify-between items-center py-2 mb-8 z-1">

  {{#link-to "index" class="menu-bar-logomark block overflow-hidden"}}
    <img src="{{logomark.file.url}}">
  {{/link-to}}

  <div class="flex items-center">
    <div class="{{if isNavHidden "hidden lg:block"}}">
      <div style="top: 100%;" class="absolute lg:static right-0 left-0 bg-white lg:bg-transparent rounded shadow-purple-xl lg:shadow-none lg:items-center font-semibold flex flex-col lg:flex-row">
        {{#link-to "visual-testing" class="block p-2 lg:px-2 lg:py-1 text-purple-600 text-lg lg:text-nav border-b border-purple-300 lg:border-none hover:no-underline hover:text-purple-800"}}Visual Testing{{/link-to}}
        <div class="menu-bar-item order-first lg:order-normal cursor-pointer relative p-2 lg:px-2 lg:py-1 text-purple-600 border-b border-purple-300 lg:border-none lg:hover:text-purple-800">
          {{#link-to "features" class="block text-lg lg:text-nav text-purple-600 hover:text-purple-800 mb-1 lg:mb-0 hover:no-underline"}}Product{{/link-to}}
          <ul style="top: 100%; left: 50%;" class="menu-bar-dropdown lg:shadow-purple-xl lg:w-64 lg:absolute lg:hidden mb-0 bg-white rounded list-none">
            {{marketing/menu-bar-dropdown-item
              tagName=""
              text="Features"
              linkRoute="features"
              icon="marketing/conveyor"
              linkColor="text-purple-600"
            }}
            {{marketing/menu-bar-dropdown-item
              tagName=""
              text="How it works"
              linkRoute="how-it-works"
              icon="marketing/green-tag-page"
              linkColor="text-green-600"
            }}
            {{marketing/menu-bar-dropdown-item
              tagName=""
              text="Integrations"
              linkRoute="integrations"
              icon="marketing/funnel"
              linkColor="text-blue-500"
            }}
          </ul>
        </div>

        {{#link-to "pricing" class="block p-2 lg:px-2 lg:py-1 text-purple-600 text-lg lg:text-nav border-b border-purple-300 lg:border-none hover:no-underline hover:text-purple-800"}}Pricing{{/link-to}}
        <a href="https://docs.percy.io" target="_blank" class="block p-2 lg:px-2 lg:py-1 text-purple-600 text-lg lg:text-nav hover:no-underline hover:text-purple-800">Docs</a>
      </div>
    </div>

    <div class="flex items-center">
      {{#if session.isAuthenticated}}
        {{#link-to 'recent-project' class="btn btn-primary px-2 ml-2"}}Go to app{{/link-to}}
      {{else}}
        <a class="px-2 text-purple-600 font-semibold hover:no-underline hover:text-purple-800 cursor-pointer" {{action "clickLogin"}}>Login</a>
        <a class="btn btn-primary ml-1" {{action "clickSignup"}}>Start for free</a>
      {{/if}}
      <div class="menu-icon p-2 -my-2 -mr-2 cursor-pointer lg:hidden" {{action "toggleIsNavHidden"}} data-test-responsive-nav-toggle>
        <div style="width: 16px; height: 14px;">
          <div class="menu-icon-line"></div>
          <div class="menu-icon-line"></div>
          <div class="menu-icon-line"></div>
          <div class="menu-icon-line"></div>
        </div>
      </div>
    </div>
  </div>
</div>
