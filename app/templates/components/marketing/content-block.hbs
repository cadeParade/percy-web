<section class="border-b border-purple-300 py-16">
  <div class="container-lg">
    <div class="md:flex items-center {{if block.isImageRightAligned "flex-row-reverse"}} {{if block.isImageCentered "flex-col"}}">
      {{#if block.isImagePresent}}
        <div class="flex-1 text-center">
          <img src="{{block.imageUrl}}" alt={{block.imageDescription}}>
        </div>
      {{/if}}
      <div class="flex-1">
        {{#if block.superheader}}
          <div class="text-center">
            <h6 class="uppercase half-underline inline-block py-sm mb-2 text-sm font-bold text-gray-300 tracking-wide border-t">
              {{block.superheader}}
            </h6>
          </div>
        {{/if}}

        {{#if block.header}}
          <h3 class="text-center text-4xl font-bold leading-none mb-2">
            {{block.header}}
          </h3>
        {{/if}}

        {{#if block.subheader}}
          <p class="text-center mb-2">
            {{md-text text=block.subheader}}
          </p>
        {{/if}}

        {{#if block.bodyText}}
          <div class="text-sm text-gray-500 marketing-markdown">
            {{md-text text=block.bodyText}}
          </div>
        {{/if}}

        {{#if block.isFullCTAPresent}}
          <div class="{{if block.isNoImagePresent "text-center"}}">
            <a
              class="
                rounded
                border
                border-purple-300
                px-2
                py-1
                text-purple-600
                text-sm
                font-bold
                hover:bg-purple-100
                hover:text-purple-600
                hover:no-underline"
              href="{{block.callToActionLink}}">
              {{block.callToActionText}}
            </a>
          </div>
        {{/if}}
      </div>
    </div>

    {{#if block.supportingTextSections}}
      <div class="flex flex-wrap items-start justify-center mb-9 {{if (not block.mainImage) "mt-4"}}">
        {{#each block.supportingTextSections as |supportingText|}}

          <div class="md:w-1/3 px-2">
            {{#if supportingText.supportingContentImageIcon.file.url}}
              <img src="{{supportingText.supportingContentImageIcon.file.url}}">
            {{/if}}

            {{#if supportingText.header}}
              <div class="font-semibold text-lg">
                {{supportingText.header}}
              </div>
            {{/if}}

            {{#if supportingText.bodyText}}
              {{md-text text=supportingText.bodyText}}
            {{/if}}
          </div>
        {{/each}}
      </div>
    {{/if}}

  </div>
</section>
