{{#if block.faqs.length}}
  <section class="container-lg border-b border-purple-300 pt-8 pb-4 md:py-16">
    <div class="content-center">
      <h3 class="text-center text-2xl md:text-3xl lg:text-4xl font-bold leading-none mb-2 content-block-header">
        {{block.title}}
      </h3>
    </div>
    <div class="flex flex-wrap mt-6 mb-2">
      {{#each block.faqs as |faq|}}
        <div class="md:w-1/2 px-2">
          <h4 class="mb-1 text-xl">{{faq.question}}</h4>
          <p class="f4 text-gray-500">{{faq.answer}}</p>
        </div>
      {{/each}}
    </div>
  </section>
{{/if}}
