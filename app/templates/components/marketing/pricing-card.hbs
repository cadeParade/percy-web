<div class="md:mx-1 h-full mb-2">
  <div class="flex flex-col justify-between bg-white-gradient-pattern h-full rounded p-2 shadow-purple-2">
    <div class="pt-2 px-2">
      <h3 class="font-semibold mb-0 text-xl {{textClasses}}">{{card.name}}</h3>
      <p>{{card.subheader}}</p>
      {{markdown-to-html markdown=card.mainContent tables=true class=(concat "pricing-card-content mb-3")}}
    </div>
    <div>
      {{#if card.startingPrice}}
        <div class="font-semibold text-gray-500 text-right">
          {{markdown-to-html card.startingPrice}}
        </div>
      {{/if}}
      {{#if card.ctaLink}}
        <a href="{{card.ctaLink}}" class="btn btn-md btn-gray btn-scale text-center w-full" data-test-pricing-card-cta>
          {{card.cta}}
        </a>
      {{/if}}
    </div>
  </div>
</div>
