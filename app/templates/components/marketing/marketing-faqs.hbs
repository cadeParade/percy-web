<section class="bg-purple-000 py-8">
  <div class="w-90vw max-w-lg mx-auto grid col-2 gap-4">
    {{#each faqs as |faq|}}
      <div>
        <h4 class="mb-1 text-xl">{{faq.question}}</h4>
        <p class="f4 text-gray-500">{{markdown-to-html markdown=faq.answer}}</p>
      </div>
    {{/each}}
  </div>
</section>
