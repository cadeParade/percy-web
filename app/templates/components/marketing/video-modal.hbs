{{yield}}

{{#if this.isVideoModalVisible}}
  <ModalDialog
    @onClose={{action this.toggleModalVisibility}}
    @translucentOverlay={{true}}
    @containerClassNames="w-90vw max-w-lg mx-auto video-content-modal"
  >
    <iframe
      width="100%"
      height="100%"
      src="{{this.videoEmbedUrl}}?autoplay=1"
      frameborder="0"
      allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
      title="Video of overview of Percy's features."
    >
    </iframe>
  </ModalDialog>
{{/if}}
