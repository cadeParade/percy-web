{{yield}}

{{#if isVideoModalVisible}}
  <ModalDialog
    @onClose={{action toggleModalVisibility}}
    @translucentOverlay={{true}}
    @containerClassNames="w-90vw max-w-lg mx-auto video-content-modal"
  >
    <iframe
      width="100%"
      height="100%"
      src="{{videoEmbedUrl}}?autoplay=1"
      frameborder="0"
      allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
    >
    </iframe>
  </ModalDialog>
{{/if}}
