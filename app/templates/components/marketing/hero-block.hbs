<div class="container container-lg mb-3">
  <div class="w-3/4 mb-9">
    {{#if content.superheader}}
      <h2 class="uppercase half-underline inline-block py-sm mb-2 text-base font-bold text-gray-300 tracking-wide border-t">
        {{content.superheader}}
      </h2>
    {{/if}}

    <h1 class="text-2xl md:text-3xl md:text-4xl font-bold mb-2">{{content.header}}</h1>

    {{#if content.subheadText}}
      <div class="w-3/4 text-base font-semibold text-gray-400">
        {{content.subheadText}}
      </div>
    {{/if}}
  </div>
</div>
