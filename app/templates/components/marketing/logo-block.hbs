<section class="border-b border-purple-300">
  <div class="container-lg pt-8 pb-8">
    <div class="flex flex-wrap items-center justify-center">
      {{#each logos as |customerLogo|}}
        <div class="w-1/2 sm:w-1/3 md:w-1/4 lg:w-1/5 text-center mb-2 px-4">
          <img src="{{customerLogo.logo.file.url}}" alt="{{customerLogo.logo.description}}">
        </div>
      {{/each}}
    </div>
  </div>
</section>
