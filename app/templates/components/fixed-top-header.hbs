<div class="Header flex justify-between items-center w-full {{if isTransparentHeader "" "Header--dark"}}">
  <div class="flex items-center">
    {{#if session.isAuthenticated}}
      {{#link-to "index"}}
        <figure class="svg-container">
          {{inline-svg "percy-santa-mascot-on-dark" class="mr-3"}}
        </figure>
      {{/link-to}}
    {{else}}
      {{#link-to "index"}}
        <figure class="svg-container">
          {{#if isTransparentHeader}}
            {{inline-svg "percy-full-horizontal-on-light" class="mr-3"}}
          {{else}}
            {{inline-svg "percy-full-horizontal-on-dark" class="mr-3"}}
          {{/if}}
        </figure>
      {{/link-to}}
    {{/if}}

    {{#if session.isAuthenticated}}
      {{organizations/switcher-nav currentOrganization=currentOrganization isTransparentHeader=isTransparentHeader}}
    {{/if}}
    {{#if currentOrganization}}
      {{#if (eq "admin" currentOrganization.currentUserMembership.role)}}
        {{#link-to "organizations.organization.settings" currentOrganization.slug data-test-settings-link=true class="hide-on-mobile"}}Settings{{/link-to}}
      {{/if}}
    {{/if}}
  </div>

  {{trial-bar organization=currentOrganization type="is-on-dark"}}

  {{#if session.isAuthenticated}}
    {{nav-menu user=session.currentUser currentOrganization=currentOrganization isTransparentHeader=isTransparentHeader}}
  {{else}}
    {{nav-menu isTransparentHeader=isTransparentHeader}}
  {{/if}}
</div>
