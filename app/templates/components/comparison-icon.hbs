<figure class="svg-container">
  {{#if (or this.build.isPending this.build.isProcessing)}}
    {{inline-svg "loader-icon"}}
  {{else if this.build.isFailed}}
    {{inline-svg "null-comparison-icon"}}
  {{else if this.build.isRejected}}
    {{inline-svg "comparison-icon-requested-changes"}}
  {{else if this.build.hasNoDiffs}}
    {{inline-svg "no-comparison-icon"}}
  {{else if this.build.isApproved}}
    {{inline-svg "comparison-approved-icon"}}
  {{else}}
    {{inline-svg "comparison-icon"}}
  {{/if}}
</figure>
